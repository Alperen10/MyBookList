<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddBookActivity">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_centerInParent="true">
           <ImageView
               android:id="@+id/add_book_activity_imageViewBookImage"
               android:src="@drawable/book"
               android:onClick="selectImage"
               android:scaleType="fitXY"
               android:layout_width="240dp"
               android:layout_height="300dp"/>

           <EditText
               android:id="@+id/add_book_activity_editTextBookName"
               android:hint="Kitap adı"
               android:layout_marginTop="50dp"
               android:textAlignment="center"
               android:layout_width="350dp"
               android:layout_height="50dp"/>

           <EditText
               android:id="@+id/add_book_activity_editTextBookAuthor"
               android:hint="Yazar adı"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:layout_width="350dp"
               android:layout_height="50dp"/>

           <EditText
               android:id="@+id/add_book_activity_editTextBookSummary"
               android:hint="Kitap özeti"
               android:layout_marginTop="15dp"
               android:inputType="textMultiLine"
               android:textAlignment="center"
               android:layout_width="350dp"
               android:layout_height="100dp"/>


           <Button
               android:id="@+id/add_book_activity_btnSave"
               android:layout_width="230dp"
               android:text="Kaydet"
               android:textSize="19sp"
               android:layout_marginTop="25dp"
               android:onClick="bookSave"
               android:enabled="false"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:textAllCaps="false"
               android:layout_height="50dp"/>




       </LinearLayout>

   </RelativeLayout>

</ScrollView>